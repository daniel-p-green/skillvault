{
  "name": "skillvault",
  "private": true,
  "version": "0.0.0",
  "description": "SkillVault â€” local-first scanner and normalizer for AI agent skills",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm --workspaces run build",
    "typecheck": "npm --workspaces run typecheck",
    "test": "npm run build && npm --workspaces run test",
    "dev:api": "npm --workspace @skillvault/manager-api run dev",
    "dev:web": "npm --workspace @skillvault/manager-web run dev",
    "dev:manager": "npm run dev:api & npm run dev:web",
    "test:goldens": "npm --workspace @skillvault/cli run test:goldens",
    "test:goldens:check": "./scripts/test-goldens.sh",
    "test:goldens:update": "./scripts/test-goldens.sh --update",
    "clean": "npm --workspaces run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7"
  },
  "overrides": {
    "next": "16.1.5"
  }
}
